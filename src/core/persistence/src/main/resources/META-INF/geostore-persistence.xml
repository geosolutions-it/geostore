<persistence version="1.0" 
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd ">

  <persistence-unit name="geostore" transaction-type="RESOURCE_LOCAL">
    <!-- when adding/removing classes, please also keep aligned the src/test/resource/hibernate.cfg.xml file -->
    <class>it.geosolutions.geostore.core.model.StoredData</class>
    <class>it.geosolutions.geostore.core.model.Resource</class>
    <class>it.geosolutions.geostore.core.model.Attribute</class>
    <class>it.geosolutions.geostore.core.model.SecurityRule</class>
    <class>it.geosolutions.geostore.core.model.Category</class>
    <class>it.geosolutions.geostore.core.model.UserAttribute</class>
    <class>it.geosolutions.geostore.core.model.User</class>
    <class>it.geosolutions.geostore.core.model.UserGroup</class>
    <class>it.geosolutions.geostore.core.model.UserGroupAttribute</class>
  </persistence-unit>
</persistence>
